<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/card_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/file_chooser_title"
        style="@style/card_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/file_chooser_message"
        style="@style/card_message_italicized"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/file_chooser_title"
        android:paddingTop="5dp" />

    <ProgressBar
        android:id="@+id/file_chooser_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminate="true" />

</RelativeLayout>