<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <!-- Toolbar theme -->
    <style name="ToolbarTheme" parent="AppTheme">
        <item name="android:textColorPrimary">@color/text_color_primary</item>
    </style>

    <style name="toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="theme">@style/ToolbarTheme</item>
    </style>

    <!-- Separator -->
    <style name="separator">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/separator_height</item>
        <item name="android:background">@color/separator</item>
    </style>

    <!-- Card styles -->
    <style name="card_v7_overflow_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/menu_button_overflow_material</item>
    </style>

    <style name="card_v7_thumbnail">
        <item name="android:layout_width">@dimen/card_v7_thumbnail_width</item>
        <item name="android:layout_height">@dimen/card_v7_thumbnail_height</item>
        <item name="android:layout_margin">@dimen/card_v7_thumbnail_margin</item>
    </style>

    <style name="card_v7_primary_text">
        <item name="android:textSize">@dimen/card_v7_primary_text_size</item>
    </style>

    <style name="card_v7_secondary_text">
        <item name="android:textColor">@android:color/secondary_text_light</item>
        <item name="android:textSize">@dimen/card_v7_secondary_text_size</item>
    </style>









    <style name="card_content_minimal_padding" parent="@style/card.native.content_outer_layout">
        <item name="android:paddingLeft">@dimen/card_content_minimal_padding</item>
        <item name="android:paddingRight">@dimen/card_content_minimal_padding</item>
        <item name="android:paddingTop">@dimen/card_content_minimal_padding</item>
        <item name="android:paddingBottom">@dimen/card_content_minimal_padding</item>
    </style>

    <style name="card_external_minimal_margins" parent="@style/card_external">
        <item name="android:layout_marginTop">@dimen/card_external_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/card_external_margin_bottom</item>
    </style>

    <style name="card_layout">
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="card_content_frame_layout" >
        <item name="android:layout_width">match_parent</item>
        <!-- <item name="android:minHeight">@dimen/card_base_empty_height</item> -->
        <item name="android:paddingLeft">@dimen/card_main_content_native_default_paddingLeft</item>
        <item name="android:paddingRight">@dimen/card_main_content_native_default_paddingRight</item>
        <item name="android:paddingTop">@dimen/card_main_content_native_default_paddingTop</item>
        <item name="android:paddingBottom">@dimen/card_main_content_native_default_paddingBottom</item>
    </style>

    <style name="card_title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/standardtext</item>
        <item name="android:layout_marginTop">2dp</item>
    </style>

    <style name="card_subtitle_dim">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="card_message">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/standardtext</item>
    </style>

    <style name="card_message_italicized">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/standardtext</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="card_expand_title">
        <item name="android:textSize">16sp</item>
        <!-- <item name="android:textStyle">bold</item> -->
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="card_expand_layout">
        <item name="android:paddingLeft">@dimen/card_expand_padding_horiz</item>
        <item name="android:paddingRight">@dimen/card_expand_padding_horiz</item>
        <item name="android:paddingBottom">@dimen/card_expand_padding_vert</item>
        <item name="android:paddingTop">@dimen/card_expand_padding_vert</item>
    </style>

    <style name="card_expand_checkbox">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="free_space_main_title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/standardtext</item>
    </style>

    <style name="free_space_title">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/standardtext</item>
    </style>

    <style name="free_space_size_text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/standardtext</item>
    </style>

    <!-- Patcher cards -->
    <style name="patcher_card_spinner">
        <item name="android:paddingTop">@dimen/patcher_card_spinner_margin</item>
        <item name="android:paddingBottom">@dimen/patcher_card_spinner_margin</item>
    </style>

    <style name="patcher_card_label">
        <item name="android:textSize">16sp</item>
        <!-- <item name="android:textColor">@color/standardtext</item> -->
        <item name="android:layout_marginTop">@dimen/patcher_card_label_margin</item>
        <item name="android:layout_marginBottom">@dimen/patcher_card_label_margin</item>
    </style>

</resources>