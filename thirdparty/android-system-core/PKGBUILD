_prebuilts='https://snapshots.noobdev.io/repo/prebuilts'

pkgname=android-system-core
pkgver=6.0.1_r43
pkgrel=1
pkgdesc="Libraries from AOSP's system/core sources"
arch=(armv7 aarch64 x86 x86_64)
url="https://android.googlesource.com/platform/system/core"
license=(Apache)
source=("git+https://android.googlesource.com/platform/system/core#tag=android-${pkgver}"
        0001-Make-this-NDK-buildable.patch)
sha512sums=('SKIP'
            '1bab380146353e49b056a5029adc6e5f4cb8c1e0b29d6c8d370cf13fa89765a65d91511f43d8b094d4517d50e2f8cb4622e538b0d244e4ba9bee4610093f8528')

prepare() {
    cd core
    patch -p1 -i "${srcdir}/0001-Make-this-NDK-buildable.patch"
}

build() {
    cd core

    local abi
    abi=$(android_get_abi_name)

    local pkg
    for pkg in libcutils liblog libpixelflinger; do
        pushd "${pkg}"

        rm -rf obj

        ndk-build \
            NDK_PROJECT_PATH=. \
            NDK_TOOLCHAIN_VERSION=clang3.6 \
            APP_BUILD_SCRIPT=Android.mk \
            APP_ABI="${abi}" \
            APP_PLATFORM=android-21 \
            "${MAKEFLAGS}"

        popd
    done
}

package() {
    cd core

    local abi
    abi=$(android_get_abi_name)

    install -dm755 "${pkgdir}"/lib/
    install -m644 \
        "libcutils/obj/local/${abi}/libcutils.a" \
        "liblog/obj/local/${abi}/liblog.a" \
        "libpixelflinger/obj/local/${abi}/libpixelflinger.a" \
        "${pkgdir}"/lib/
    install -dm755 "${pkgdir}"/include/
    cp -a \
        include/cutils \
        include/log \
        libpixelflinger/include/pixelflinger \
        "${pkgdir}"/include/
}
